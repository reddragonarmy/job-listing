<div class="col-md-4 col-md-offset-4">
    <h2>填写简历</h2>

    <hr>
    
    <%= simple_form_for [@job, @resume] do |f| %>
      <div class="form-group">
        <%= f.input :name, label: "姓名", input_html: { class: "form-control"} %>
        <%= f.input :email, label: "邮箱", input_html: { class: "form-control"} %>
        <%= f.input :phone, label: "电话", input_html: { class: "form-control"} %>
        <%= f.input :attachment, label: "上传 PDF 附件" %>
      </div>
      <%= f.submit "确认提交", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
    <% end %>

</div>

